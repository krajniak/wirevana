{
  "name": "Wirevana Dev",
  "image": "mcr.microsoft.com/devcontainers/javascript-node:1-20-bookworm",
  "remoteUser": "node",
  "features": {},
  "onCreateCommand": "sudo corepack enable pnpm",
  "postCreateCommand": "pnpm install && pnpm -r run build",
  "postStartCommand": "echo 'Wirevana development environment ready! Use Run -> Start Debugging to launch the showcase.'",
  "forwardPorts": [3000],
  "customizations": {
    "vscode": {
      "extensions": [
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "ms-vscode.vscode-typescript-next",
        "github.copilot",
        "vitest.explorer"
      ],
      "settings": {
        "editor.formatOnSave": true,
        "typescript.tsdk": "node_modules/typescript/lib",
        "files.eol": "\n"
      }
    }
  }
}
