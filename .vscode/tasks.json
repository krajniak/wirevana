{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Monorepo: Install",
      "type": "shell",
      "command": "pnpm install",
      "problemMatcher": []
    },
    {
      "label": "Monorepo: Build All",
      "type": "shell",
      "command": "pnpm -r run build",
      "group": "build",
      "problemMatcher": ["$tsc"],
      "presentation": {
        "reveal": "always"
      }
    },
    {
      "label": "Packages: Publish",
      "type": "shell",
      "command": "pnpm publish-packages",
      "problemMatcher": []
    },
    {
      "label": "Run Wirevana Showcase",
      "type": "shell",
      "command": "python3 -m http.server --directory dist 8080",
      "isBackground": true,
      "problemMatcher": [],
      "dependsOn": [
        "build-canvas"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "build-canvas",
      "type": "shell",
      "command": "node packages/cli/dist/index.js build-canvas ./examples/mvp-showcase.wirevana.ts",
      "problemMatcher": []
    }
  ]
}