{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Monorepo: Install",
      "type": "shell",
      "command": "pnpm install",
      "group": "build",
      "problemMatcher": [],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": false
      }
    },
    {
      "label": "Monorepo: Build All",
      "type": "shell",
      "command": "pnpm -r run build",
      "group": "build",
      "problemMatcher": ["$tsc"],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": false
      },
      "dependsOn": ["Monorepo: Install"]
    },
    {
      "label": "Build Canvas",
      "type": "shell",
      "command": "node packages/cli/dist/index.js build-canvas ./examples/mvp-showcase.wirevana.ts",
      "group": "build",
      "problemMatcher": [],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": false
      },
      "dependsOn": ["Monorepo: Build All"]
    },
    {
      "label": "Setup and Build Everything",
      "dependsOrder": "sequence",
      "dependsOn": [
        "Monorepo: Install",
        "Monorepo: Build All", 
        "Build Canvas"
      ],
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": true
      }
    },
    {
      "label": "Start HTTP Server",
      "type": "shell",
      "command": "python3 -m http.server --directory dist --bind 0.0.0.0 3000",
      "isBackground": true,
      "group": "build",
      "problemMatcher": {
        "pattern": {
          "regexp": "^Serving HTTP on (.+) port (.+) \\(http://(.+)\\) \\.\\.\\.$",
          "file": 1,
          "line": 2,
          "column": 3
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "^Serving HTTP",
          "endsPattern": "^Serving HTTP on (.+) port (.+) \\(http://(.+)\\) \\.\\.\\.$"
        }
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "dedicated",
        "showReuseMessage": false,
        "clear": false
      },
      "dependsOn": ["Setup and Build Everything"]
    },
    {
      "label": "Start Enhanced Server",
      "type": "shell",
      "command": "node wirevana-server.mjs",
      "isBackground": true,
      "group": "build",
      "problemMatcher": {
        "pattern": {
          "regexp": "ðŸš€ Wirevana server running at (.+)",
          "file": 1
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "ðŸš€ Wirevana server running",
          "endsPattern": "ðŸ“ Serving files from:"
        }
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "dedicated",
        "showReuseMessage": false,
        "clear": false
      },
      "dependsOn": ["Setup and Build Everything"]
    },
    {
      "label": "Kill Enhanced Server",
      "type": "shell",
      "command": "echo 'Killing any existing servers...' && (pkill -9 -f 'wirevana-server.mjs' 2>/dev/null || true) && (pkill -9 -f 'node.*wirevana-server.mjs' 2>/dev/null || true) && (lsof -ti:3000 | xargs kill -9 2>/dev/null || true) && sleep 1 && echo 'Server kill complete'",
      "group": "build",
      "problemMatcher": [],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": false
      }
    },
    {
      "label": "Start Enhanced Server and Open Browser",
      "dependsOrder": "sequence",
      "dependsOn": [
        "Kill Enhanced Server",
        "Setup and Build Everything",
        "Start Enhanced Server",
        "Open Simple Browser"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": true
      }
    },
    {
      "label": "Open Simple Browser",
      "type": "shell",
      "command": "sleep 3 && code --open-url http://localhost:3000",
      "group": "build",
      "problemMatcher": [],
      "presentation": {
        "echo": false,
        "reveal": "never",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": false
      }
    },
    {
      "label": "Start HTTP Server and Open Browser",
      "dependsOrder": "sequence",
      "dependsOn": [
        "Kill Server",
        "Setup and Build Everything",
        "Start HTTP Server",
        "Open Simple Browser"
      ],
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": true
      }
    },
    {
      "label": "Packages: Publish",
      "type": "shell",
      "command": "pnpm publish-packages",
      "group": "build",
      "problemMatcher": []
    }
  ]
}